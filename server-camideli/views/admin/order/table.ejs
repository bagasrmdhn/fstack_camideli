<!-- DataTales Example -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered"
        id="dataTable"
        width="100%"
        cellspacing="0"
      >
        <thead>
          <tr>
            <th>No</th>
            <th>Invoice</th>
            <th>Customer</th>
            <th>Payment</th>
            <th>Payment Status</th>
            <th>Order Status</th>
            <th>Order Date</th>
            <th>Order Total</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% order.forEach(function(Order, index) { %>
          <tr>
            <td><%= index+1 %></td>
            <td><%= Order.invoice %></td>
            <td><%= Order.invoice %></td>
            <td><%= Order.invoice %></td>
            <td><%= Order.invoice %></td>
            <td><%= Order.invoice %></td>
            <td><%= Order.invoice %></td>
            <td><%= Order.invoice %></td>
            <td><%= Order.invoice %></td>
            <td><%= Order.invoice %></td>

            <td>
              <form
                action="/admin/order/<%= order[index].id
                %>?_method=DELETE"
                method="POST"
              >
                <a
                  href="javascript:void()"
                  type="button"
                  class="btn btn-warning btn-circle btn-sm button-update"
                  data-id="<%= order[index].id %>"
                  data-name="<%= order[index].name %>"
                  data-accountnumber="<%= order[index].accountNumber %>"
                  data-ordername="<%= order[index].orderName %>"
                  ><i class="fa fa-edit"></i>
                </a>
                <button type="submit" class="btn btn-danger btn-circle btn-sm">
                  <i class="fa fa-trash"></i>
                </button>
              </form>
            </td>
          </tr>

          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</div>
