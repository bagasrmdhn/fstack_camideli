<div class="card shadow mb-4 mt-2">
  <div class="card-header">
    <a href="/admin/order" class="btn btn-primary">Back</a>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-4">
        <img
          src="http://localhost:3000/<%= order.payments.proofPayment %>"
          alt="img"
          style="width: 100%; display: block"
        />
        <form action="/admin/order/<%=order.id%>/confirmation?_method=PUT" method="post">
          <!-- <div class="form-group">
            <label for="status">Status</label>
            <select
              class="form-control"
              name="status"
              id="status"
              value="<%= order.status %>"
            >
              <option value="Waiting Payment">Waiting Payment</option>
              <option value="On Proccess">On Proccess</option>
              <option value="Shipping">Shipping</option>
              <option value="Success">Success</option>
            </select>
          </div> -->
          <button type="submit" class="btn btn-success">
            <i class="fa fa-times"></i> Approve
        </button>
          <div class="row ml-1">

              <button type="submit" class="btn btn-primary">Update</button>
            </form>
            <form action="/admin/order/<%=order.id%>/reject?_method=PUT" method="post" class="ml-2">
                <button type="submit" class="btn btn-danger">
                    <i class="fa fa-times"></i> Reject
                </button>
            </form>
        </div>
      </div>
      <div class="col-md-8">
        <div class="table-responsive">
          <table class="table" width="100%" cellspacing="0">
            <thead>
              <tr>
                <th>Member Name</th>
                <th>Bank From</th>
                <th>Item Name</th>
                <th>Quantity</th>
                <th>Total</th>
              </tr>
            </thead>
            <tbody>
                <%for(let x = 0; x < order.itemId.length; x++) { %>

                <tr>
                    <td><%= order.memberId.firstName + " " + order.memberId.lastName %></td>
                    <td><%= order.payments.bankFrom %></td>
                    <td><%= order.itemId[x].name %></td>
                    <td><%= order.itemId[x].quantity %></td>
                    <td><%= order.total %></td>
                </tr>
                <% } %>
            </tbody>
          </table>

        </div>
      </div>
    </div>
  </div>
</div>
